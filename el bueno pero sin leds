/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

typedef enum {
  ROOM_MODE_STANDBY = 0,  // Puerta abierta, todo apagado
  ROOM_MODE_CONFORT,      // Puerta cerrada + movimiento reciente
  ROOM_MODE_ECO           // Puerta cerrada + sin movimiento tiempo largo
} RoomMode;

typedef struct {
  volatile float temperature;  // °C
  volatile float pressure;     // hPa
  volatile float humidity;     // %RH
} Device_Config;

typedef struct {
  uint16_t dig_T1;
  int16_t  dig_T2;
  int16_t  dig_T3;
  uint16_t dig_P1;
  int16_t  dig_P2;
  int16_t  dig_P3;
  int16_t  dig_P4;
  int16_t  dig_P5;
  int16_t  dig_P6;
  int16_t  dig_P7;
  int16_t  dig_P8;
  int16_t  dig_P9;
  uint8_t  dig_H1;
  int16_t  dig_H2;
  uint8_t  dig_H3;
  int16_t  dig_H4;
  int16_t  dig_H5;
  int8_t   dig_H6;
} Calibration_Data;

typedef struct {
  uint8_t          ID;
  bool             deviceReady;
  bool             dataReady;
  uint8_t          rawData[8];
  uint32_t         rawTemperature;
  uint32_t         rawPressure;
  uint16_t         rawHumidity;
  Calibration_Data coef;
} BME_Config;

typedef struct {
  bool      doorClosed;      // true = puerta cerrada
  bool      motionPresent;   // true = movimiento reciente PIR
  RoomMode  mode;

  uint32_t  lastMotionTick;  // tick de último movimiento (para ECO)

  float     temperature;
  float     humidity;
  float     pressure;
  uint8_t   fan_pwm;         // 0–100 %
} RoomState;

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

/* --- BME280 I2C & registros --- */
#define BME280_I2C_ADDRESS            (0x76 << 1)   // Ajustar a 0x77<<1 si tu módulo es 0x77

#define BME280_REG_CHIP_ID            0xD0
#define BME280_REG_CTRL_HUM           0xF2
#define BME280_REG_STATUS             0xF3
#define BME280_REG_CTRL_MEAS          0xF4
#define BME280_REG_CONFIG             0xF5
#define BME280_REG_DATA               0xF7

#define BME280_REG_T1                 0x88
#define BME280_REG_T2                 0x8A
#define BME280_REG_T3                 0x8C
#define BME280_REG_P1                 0x8E
#define BME280_REG_P2                 0x90
#define BME280_REG_P3                 0x92
#define BME280_REG_P4                 0x94
#define BME280_REG_P5                 0x96
#define BME280_REG_P6                 0x98
#define BME280_REG_P7                 0x9A
#define BME280_REG_P8                 0x9C
#define BME280_REG_P9                 0x9E

#define BME280_REG_H1                 0xA1
#define BME280_REG_H2                 0xE1
#define BME280_REG_H3                 0xE3
#define BME280_REG_H4                 0xE4
#define BME280_REG_H5                 0xE5
#define BME280_REG_H6                 0xE7

/* Thresholds MODO CONFORT (RUN) */
#define CONF_TEMP_OFF_THRESHOLD   24.0f   // <24  -> 0%
#define CONF_TEMP_MID_THRESHOLD   25.0f   // 24–25 -> 50%
#define CONF_TEMP_HIGH_THRESHOLD  27.0f   // 25–27 -> 75%, >27 -> 100%

/* Thresholds MODO ECO */
#define ECO_TEMP_OFF_THRESHOLD    26.0f   // <26  -> 0%
#define ECO_TEMP_MID_THRESHOLD    27.0f   // 26–27 -> 30%
#define ECO_TEMP_HIGH_THRESHOLD   29.0f   // 27–29 -> 60%, >29 -> 80%

/* Tiempos (ms) */
#define LOOP_CONTROL_PERIOD_MS        100U          // periodo base de la tarea de control
#define SAMPLE_PERIOD_CONFORT_MS      2000U         // lectura BME en confort
#define SAMPLE_PERIOD_ECO_MS          5000U        // lectura BME en eco
#define SAMPLE_PERIOD_STANDBY_MS      10000U        // lectura BME muy esporádica en standby
#define ECO_NO_MOTION_MS              (10U * 1000U)  // 5 min sin movimiento -> ECO

/* USER CODE END PD */

