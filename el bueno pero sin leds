/**
  * Enable DMA controller clock
  */
static void MX_DMA_Init(void)
{

  /* DMA controller clock enable */
  __HAL_RCC_DMA1_CLK_ENABLE();

  /* DMA interrupt init */
  /* DMA1_Stream0_IRQn interrupt configuration */
  HAL_NVIC_SetPriority(DMA1_Stream0_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(DMA1_Stream0_IRQn);
  /* DMA1_Stream1_IRQn interrupt configuration */
  HAL_NVIC_SetPriority(DMA1_Stream1_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(DMA1_Stream1_IRQn);
  /* DMA1_Stream2_IRQn interrupt configuration */
  HAL_NVIC_SetPriority(DMA1_Stream2_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(DMA1_Stream2_IRQn);

}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */
  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();
  __HAL_RCC_GPIOF_CLK_ENABLE();
  __HAL_RCC_GPIOE_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, LED_STATUS_Pin|LED_FAN_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(LED_ACTIVITY_GPIO_Port, LED_ACTIVITY_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : DOOR_Pin (EXTI) */
  GPIO_InitStruct.Pin = DOOR_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_RISING_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(DOOR_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : PIR_Pin (EXTI también, para ahorrar energía) */
  GPIO_InitStruct.Pin = PIR_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_RISING_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(PIR_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LED_STATUS_Pin */
  GPIO_InitStruct.Pin = LED_STATUS_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_VERY_HIGH;
  HAL_GPIO_Init(LED_STATUS_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LED_FAN_Pin */
  GPIO_InitStruct.Pin = LED_FAN_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(LED_FAN_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LED_ACTIVITY_Pin */
  GPIO_InitStruct.Pin = LED_ACTIVITY_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(LED_ACTIVITY_GPIO_Port, &GPIO_InitStruct);

  /* USER CODE BEGIN MX_GPIO_Init_2 */
  /* IMPORTANTE: ajusta aquí la IRQ correcta dependiendo del pin
     (EXTI0, EXTI1, EXTI9_5, EXTI15_10, etc.) según tu .ioc */
  HAL_NVIC_SetPriority(EXTI15_10_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(EXTI15_10_IRQn);

  /* EXTI line3 interrupt */
  HAL_NVIC_SetPriority(EXTI3_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(EXTI3_IRQn);

  /* EXTI line[9:5] interrupt */
  HAL_NVIC_SetPriority(EXTI9_5_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(EXTI9_5_IRQn);

  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */

/* Tarea de control: puerta + PIR + modos (STANDBY/CONFORT/ECO) */
void StartDefaultTask(void *argument)
{
  /* USER CODE BEGIN 5 */

  UART_Print("Task CONTROL iniciada\r\n");

  GPIO_PinState doorLevel = HAL_GPIO_ReadPin(DOOR_GPIO_Port, DOOR_Pin);
  GPIO_PinState pirLevel  = HAL_GPIO_ReadPin(PIR_GPIO_Port, PIR_Pin);

  uint32_t now = osKernelGetTickCount();

  osMutexAcquire(roomStateMutex, osWaitForever);
  gRoom.doorClosed     = (doorLevel == GPIO_PIN_RESET); // suponiendo MC-38 a GND
  gRoom.motionPresent  = (pirLevel  == GPIO_PIN_SET);
  gRoom.lastMotionTick = now;

  if (!gRoom.doorClosed) {
    gRoom.mode = ROOM_MODE_STANDBY;
  } else if (gRoom.motionPresent) {
    gRoom.mode = ROOM_MODE_CONFORT;
  } else {
    gRoom.mode = ROOM_MODE_ECO;
  }
  osMutexRelease(roomStateMutex);

  for(;;)
  {
    /* Procesar eventos de puerta */
    while (osSemaphoreAcquire(doorSem, 0) == osOK) {
      doorLevel = HAL_GPIO_ReadPin(DOOR_GPIO_Port, DOOR_Pin);
      bool closed = (doorLevel == GPIO_PIN_RESET);

      osMutexAcquire(roomStateMutex, osWaitForever);
      gRoom.doorClosed = closed;

      if (!closed) {
        /* Puerta abierta -> STANDBY */
        gRoom.mode = ROOM_MODE_STANDBY;
        gRoom.motionPresent = false;
      } else {
        /* Puerta cerrada: decidir RUN/ECO según movimiento */
        if (gRoom.motionPresent) {
          gRoom.mode = ROOM_MODE_CONFORT;
          gRoom.lastMotionTick = osKernelGetTickCount();
        } else {
          gRoom.mode = ROOM_MODE_ECO;
        }
      }
      osMutexRelease(roomStateMutex);
    }

    /* Procesar eventos de PIR */
    while (osSemaphoreAcquire(pirSem, 0) == osOK) {
      pirLevel = HAL_GPIO_ReadPin(PIR_GPIO_Port, PIR_Pin);
      bool motion = (pirLevel == GPIO_PIN_SET);

      osMutexAcquire(roomStateMutex, osWaitForever);
      gRoom.motionPresent = motion;
      if (motion) {
        gRoom.lastMotionTick = osKernelGetTickCount();
        if (gRoom.doorClosed) {
          gRoom.mode = ROOM_MODE_CONFORT;
        }
      }
      osMutexRelease(roomStateMutex);
    }

    /* Transición automática CONFORT -> ECO si pasa tiempo sin movimiento */
    osMutexAcquire(roomStateMutex, osWaitForever);
    if (gRoom.mode == ROOM_MODE_CONFORT && gRoom.doorClosed) {
      uint32_t now2 = osKernelGetTickCount();
      if ((uint32_t)(now2 - gRoom.lastMotionTick) > ECO_NO_MOTION_MS) {
        gRoom.mode = ROOM_MODE_ECO;
      }
    }

    /* Reflejar estado en LED_STATUS (encendido si no estamos en standby) */
    RoomMode modeSnap = gRoom.mode;
    osMutexRelease(roomStateMutex);

    if (modeSnap == ROOM_MODE_STANDBY) {
      HAL_GPIO_WritePin(LED_STATUS_GPIO_Port, LED_STATUS_Pin, GPIO_PIN_RESET);
    } else {
      HAL_GPIO_WritePin(LED_STATUS_GPIO_Port, LED_STATUS_Pin, GPIO_PIN_SET);
    }

    osDelay(LOOP_CONTROL_PERIOD_MS);
  }

  /* USER CODE END 5 */
}

/* Tarea de ambiente: lee BME, controla FAN, actualiza OLED y UART */
void StartEnvTask(void *argument)
{
  UART_Print("Task ENV iniciada\r\n");

  for (;;)
  {
    RoomMode mode;
    bool doorClosed;
    uint32_t samplePeriodMs;

    osMutexAcquire(roomStateMutex, osWaitForever);
    mode       = gRoom.mode;
    doorClosed = gRoom.doorClosed;
    osMutexRelease(roomStateMutex);

    switch (mode) {
      case ROOM_MODE_CONFORT:
        samplePeriodMs = SAMPLE_PERIOD_CONFORT_MS;
        break;
      case ROOM_MODE_ECO:
        samplePeriodMs = SAMPLE_PERIOD_ECO_MS;
        break;
      default: // STANDBY
        samplePeriodMs = SAMPLE_PERIOD_STANDBY_MS;
        break;
    }

    osDelay(samplePeriodMs);

    /* Si puerta abierta o BME no listo -> fan 0, solo logs mínimos */
    if (!doorClosed || !devBME280.deviceReady) {
      Fan_SetDuty(0);
      HAL_GPIO_WritePin(LED_FAN_GPIO_Port, LED_FAN_Pin, GPIO_PIN_RESET);
      continue;
    }

    /* Blink de actividad mientras se lee el sensor */
    HAL_GPIO_WritePin(LED_ACTIVITY_GPIO_Port, LED_ACTIVITY_Pin, GPIO_PIN_SET);

    if (BME280_ReadSensorOnce()) {
      uint8_t fan_pwm_local = 0;

      /* Decidir PWM según modo y temperatura */
      float T = dev.temperature;

      if (mode == ROOM_MODE_CONFORT) {
        if (T <= CONF_TEMP_OFF_THRESHOLD) {
          fan_pwm_local = 0;
        } else if (T < CONF_TEMP_MID_THRESHOLD) {
          fan_pwm_local = 50;
        } else if (T < CONF_TEMP_HIGH_THRESHOLD) {
          fan_pwm_local = 75;
        } else {
          fan_pwm_local = 100;
        }
      } else if (mode == ROOM_MODE_ECO) {
        if (T <= ECO_TEMP_OFF_THRESHOLD) {
          fan_pwm_local = 0;
        } else if (T < ECO_TEMP_MID_THRESHOLD) {
          fan_pwm_local = 30;
        } else if (T < ECO_TEMP_HIGH_THRESHOLD) {
          fan_pwm_local = 60;
        } else {
          fan_pwm_local = 80;
        }
      } else {
        /* STANDBY */
        fan_pwm_local = 0;
      }

      /* Actualizar estado global */
      osMutexAcquire(roomStateMutex, osWaitForever);
      gRoom.temperature = dev.temperature;
      gRoom.humidity    = dev.humidity;
      gRoom.pressure    = dev.pressure;
      gRoom.fan_pwm     = fan_pwm_local;

      RoomMode modeSnap      = gRoom.mode;
      bool     doorSnap      = gRoom.doorClosed;
      bool     motionSnap    = gRoom.motionPresent;
      float    T_snap        = gRoom.temperature;
      float    H_snap        = gRoom.humidity;
      float    P_snap        = gRoom.pressure;
      uint8_t  fan_snap      = gRoom.fan_pwm;
      osMutexRelease(roomStateMutex);

      /* Aplicar PWM físico */
      Fan_SetDuty(fan_pwm_local);
      HAL_GPIO_WritePin(LED_FAN_GPIO_Port, LED_FAN_Pin,
                        (fan_pwm_local > 0) ? GPIO_PIN_SET : GPIO_PIN_RESET);

      /* Actualizar OLED */
      char line[32];
      const char *modeStr =
          (modeSnap == ROOM_MODE_CONFORT) ? "RUN" :
          (modeSnap == ROOM_MODE_ECO)     ? "ECO" : "STBY";

      ssd1306_Fill(Black);

      // Línea 1: estado puerta + PIR + modo
      ssd1306_SetCursor(0, 0);
      snprintf(line, sizeof(line), "D:%s P:%s",
               doorSnap ? "C" : "A",
               motionSnap ? "M" : "NM");
      ssd1306_WriteString(line, Font_7x10, White);

      ssd1306_SetCursor(80, 0);
      ssd1306_WriteString(modeStr, Font_7x10, White);

      // Línea 2: Temperatura
      ssd1306_SetCursor(0, 12);
      snprintf(line, sizeof(line), "T: %.1f C", T_snap);
      ssd1306_WriteString(line, Font_7x10, White);

      // Línea 3: Humedad
      ssd1306_SetCursor(0, 24);
      snprintf(line, sizeof(line), "RH: %.1f %%", H_snap);
      ssd1306_WriteString(line, Font_7x10, White);

      // Línea 4: Presión
      ssd1306_SetCursor(0, 36);
      snprintf(line, sizeof(line), "P: %.1f hPa", P_snap);
      ssd1306_WriteString(line, Font_7x10, White);

      // Línea 5: Fan
      ssd1306_SetCursor(0, 48);
      snprintf(line, sizeof(line), "Fan: %u %%", fan_snap);
      ssd1306_WriteString(line, Font_7x10, White);

      ssd1306_UpdateScreen();

      /* Log a PC */
      int len = snprintf(uartBuf, sizeof(uartBuf),
                         "Mode=%s | Door=%s | PIR=%s | T=%.2f C, RH=%.2f %%, P=%.2f hPa | Fan=%u%%\r\n",
                         modeStr,
                         doorSnap ? "CERRADA" : "ABIERTA",
                         motionSnap ? "MOV" : "SIN_MOV",
                         T_snap,
                         H_snap,
                         P_snap,
                         fan_snap);
      if (len > 0) {
        HAL_UART_Transmit(&huart3, (uint8_t*)uartBuf, (uint16_t)len, HAL_MAX_DELAY);
      }

      /* Log compacto a ESP (UART4) */
      int lenEsp = snprintf(espBuf, sizeof(espBuf),
                            "M=%s,D=%d,PIR=%d,T=%.2f,H=%.2f,P=%.2f,F=%u\r\n",
                            modeStr,
                            doorSnap ? 0 : 1,
                            motionSnap ? 1 : 0,
                            T_snap, H_snap, P_snap, fan_snap);
      if (lenEsp > 0) {
        HAL_UART_Transmit(&huart4, (uint8_t*)espBuf, (uint16_t)lenEsp, HAL_MAX_DELAY);
      }
    }

    HAL_GPIO_WritePin(LED_ACTIVITY_GPIO_Port, LED_ACTIVITY_Pin, GPIO_PIN_RESET);
  }
}

/* USER CODE END 4 */

 /* MPU Configuration */

void MPU_Config(void)
{
  MPU_Region_InitTypeDef MPU_InitStruct = {0};

  /* Disables the MPU */
  HAL_MPU_Disable();

  /** Initializes and configures the Region and the memory to be protected
  */
  MPU_InitStruct.Enable = MPU_REGION_ENABLE;
  MPU_InitStruct.Number = MPU_REGION_NUMBER0;
  MPU_InitStruct.BaseAddress = 0x0;
  MPU_InitStruct.Size = MPU_REGION_SIZE_4GB;
  MPU_InitStruct.SubRegionDisable = 0x87;
  MPU_InitStruct.TypeExtField = MPU_TEX_LEVEL0;
  MPU_InitStruct.AccessPermission = MPU_REGION_NO_ACCESS;
  MPU_InitStruct.DisableExec = MPU_INSTRUCTION_ACCESS_DISABLE;
  MPU_InitStruct.IsShareable = MPU_ACCESS_SHAREABLE;
  MPU_InitStruct.IsCacheable = MPU_ACCESS_NOT_CACHEABLE;
  MPU_InitStruct.IsBufferable = MPU_ACCESS_NOT_BUFFERABLE;

  HAL_MPU_ConfigRegion(&MPU_InitStruct);
  /* Enables the MPU */
  HAL_MPU_Enable(MPU_PRIVILEGED_DEFAULT);

}

/**
  * @brief  Period elapsed callback in non blocking mode
  * @note   This function is called  when TIM6 interrupt took place, inside
  * HAL_TIM_IRQHandler(). It makes a direct call to HAL_IncTick() to increment
  * a global variable "uwTick" used as application time base.
  * @param  htim : TIM handle
  * @retval None
  */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  /* USER CODE BEGIN Callback 0 */
  /* USER CODE END Callback 0 */
  if (htim->Instance == TIM6)
  {
    HAL_IncTick();
  }
  /* USER CODE BEGIN Callback 1 */
  /* USER CODE END Callback 1 */
}

