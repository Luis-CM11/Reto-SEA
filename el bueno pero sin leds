static void UART_Print(const char *msg)
{
  HAL_UART_Transmit(&huart3, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
}

static void Fan_SetDuty(uint8_t duty_percent)
{
  if (duty_percent > 100U)
  {
    duty_percent = 100U;
  }

  uint32_t period  = __HAL_TIM_GET_AUTORELOAD(&htim1); // debería ser 999
  uint32_t compare = (duty_percent * period) / 100U;

  __HAL_TIM_SET_COMPARE(&htim1, TIM_CHANNEL_2, compare);
}

static void BME280_WriteReg(uint8_t reg, uint8_t value)
{
  HAL_I2C_Mem_Write(&hi2c1, BME280_I2C_ADDRESS, reg, 1, &value, 1, HAL_MAX_DELAY);
}

static void BME280_ReadCalibration(void)
{
  uint8_t buf[32];
  uint8_t tmp[2];

  /* T y P (24 bytes desde 0x88) */
  HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS, BME280_REG_T1, 1, buf, 24, HAL_MAX_DELAY);

  devBME280.coef.dig_T1 = (buf[1] << 8) | buf[0];
  devBME280.coef.dig_T2 = (buf[3] << 8) | buf[2];
  devBME280.coef.dig_T3 = (buf[5] << 8) | buf[4];

  devBME280.coef.dig_P1 = (buf[7] << 8) | buf[6];
  devBME280.coef.dig_P2 = (buf[9] << 8) | buf[8];
  devBME280.coef.dig_P3 = (buf[11] << 8) | buf[10];
  devBME280.coef.dig_P4 = (buf[13] << 8) | buf[12];
  devBME280.coef.dig_P5 = (buf[15] << 8) | buf[14];
  devBME280.coef.dig_P6 = (buf[17] << 8) | buf[16];
  devBME280.coef.dig_P7 = (buf[19] << 8) | buf[18];
  devBME280.coef.dig_P8 = (buf[21] << 8) | buf[20];
  devBME280.coef.dig_P9 = (buf[23] << 8) | buf[22];

  /* H1 */
  HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS, BME280_REG_H1, 1,
                   &devBME280.coef.dig_H1, 1, HAL_MAX_DELAY);

  /* H2 */
  HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS, BME280_REG_H2, 1, tmp, 2, HAL_MAX_DELAY);
  devBME280.coef.dig_H2 = (tmp[1] << 8) | tmp[0];

  /* H3 */
  HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS, BME280_REG_H3, 1,
                   &devBME280.coef.dig_H3, 1, HAL_MAX_DELAY);

  /* H4 y H5 son “cruzados” */
  HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS, BME280_REG_H4, 1, tmp, 2, HAL_MAX_DELAY);
  devBME280.coef.dig_H4 = ((int16_t)tmp[0] << 4) | (tmp[1] & 0x0F);

  HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS, BME280_REG_H5, 1, tmp, 2, HAL_MAX_DELAY);
  devBME280.coef.dig_H5 = ((int16_t)tmp[1] << 4) | (tmp[0] >> 4);

  HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS, BME280_REG_H6, 1,
                   (uint8_t*)&devBME280.coef.dig_H6, 1, HAL_MAX_DELAY);
}

static void BME280_ProcessRaw(int32_t rawTemp, uint32_t rawPressure, uint16_t rawHumidity)
{
  int32_t var1, var2, t_fine, resultTemp;
  int64_t var1p, var2p, resultPress;
  int32_t resultHum;

  /* ---- Temperatura ---- */
  var1 = ((((rawTemp >> 3) - ((int32_t)devBME280.coef.dig_T1 << 1))) *
          ((int32_t)devBME280.coef.dig_T2)) >> 11;

  var2 = (((((rawTemp >> 4) - (int32_t)devBME280.coef.dig_T1) *
            ((rawTemp >> 4) - (int32_t)devBME280.coef.dig_T1)) >> 12) *
          (int32_t)devBME280.coef.dig_T3) >> 14;

  t_fine = var1 + var2;
  resultTemp = (t_fine * 5 + 128) >> 8;   // 0.01°C

  /* ---- Presión ---- */
  var1p = (int64_t)t_fine - 128000;
  var2p = var1p * var1p * (int64_t)devBME280.coef.dig_P6;
  var2p = var2p + ((var1p * (int64_t)devBME280.coef.dig_P5) << 17);
  var2p = var2p + (((int64_t)devBME280.coef.dig_P4) << 35);
  var1p = ((var1p * var1p * (int64_t)devBME280.coef.dig_P3) >> 8) +
          ((var1p * (int64_t)devBME280.coef.dig_P2) << 12);
  var1p = (((int64_t)1 << 47) + var1p) * (int64_t)devBME280.coef.dig_P1 >> 33;

  if (var1p == 0) {
    return; // división por cero
  }

  resultPress = 1048576 - rawPressure;
  resultPress = (((resultPress << 31) - var2p) * 3125) / var1p;
  var1p = ((int64_t)devBME280.coef.dig_P9 *
          (resultPress >> 13) *
          (resultPress >> 13)) >> 25;
  var2p = ((int64_t)devBME280.coef.dig_P8 * resultPress) >> 19;

  resultPress = ((resultPress + var1p + var2p) >> 8) +
                ((int64_t)devBME280.coef.dig_P7 << 4);

  /* ---- Humedad ---- */
  resultHum = t_fine - (int32_t)76800;
  resultHum =
    ((((rawHumidity << 14) - ((int32_t)devBME280.coef.dig_H4 << 20) -
       ((int32_t)devBME280.coef.dig_H5 * resultHum)) + (int32_t)16384) >> 15) *
    (((((((resultHum * (int32_t)devBME280.coef.dig_H6) >> 10) *
         (((resultHum * (int32_t)devBME280.coef.dig_H3) >> 11) +
          (int32_t)32768)) >> 10) + (int32_t)2097152) *
       (int32_t)devBME280.coef.dig_H2 + 8192) >> 14);

  resultHum = resultHum -
              (((((resultHum >> 15) * (resultHum >> 15)) >> 7) *
                (int32_t)devBME280.coef.dig_H1) >> 4);

  if (resultHum < 0) {
    resultHum = 0;
  } else if (resultHum > 419430400) {
    resultHum = 419430400;
  }
  resultHum >>= 12;

  dev.temperature = ((float)resultTemp / 100.0f);
  dev.pressure    = ((float)resultPress / 256.0f / 100.0f);
  dev.humidity    = ((float)resultHum / 1024.0f);
}

static bool BME280_ReadSensorOnce(void)
{
  if (!devBME280.deviceReady) {
    return false;
  }

  if (HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS,
                       BME280_REG_DATA, 1,
                       devBME280.rawData, 8,
                       HAL_MAX_DELAY) != HAL_OK) {
    return false;
  }

  devBME280.rawPressure =
    (devBME280.rawData[0] << 12) |
    (devBME280.rawData[1] << 4)  |
    (devBME280.rawData[2] >> 4);

  devBME280.rawTemperature =
    (devBME280.rawData[3] << 12) |
    (devBME280.rawData[4] << 4)  |
    (devBME280.rawData[5] >> 4);

  devBME280.rawHumidity =
    (devBME280.rawData[6] << 8) |
    (devBME280.rawData[7]);

  BME280_ProcessRaw((int32_t)devBME280.rawTemperature,
                    devBME280.rawPressure,
                    devBME280.rawHumidity);

  devBME280.dataReady = true;
  return true;
}

static void BME280_Init(void)
{
  memset(&dev, 0, sizeof(dev));
  memset(&devBME280, 0, sizeof(devBME280));

  uint8_t id = 0;
  if (HAL_I2C_Mem_Read(&hi2c1, BME280_I2C_ADDRESS,
                       BME280_REG_CHIP_ID, 1,
                       &id, 1, 1000) != HAL_OK) {
    devBME280.deviceReady = false;
    UART_Print("BME280: No responde en I2C\r\n");
    return;
  }

  if (id != 0x60) {
    devBME280.deviceReady = false;
    UART_Print("BME280: Chip ID incorrecto\r\n");
    return;
  }

  devBME280.ID = id;
  devBME280.deviceReady = true;
  UART_Print("BME280 detectado (ID=0x60)\r\n");

  /* Calibración */
  BME280_ReadCalibration();

  /* Configuración “weather monitoring”: oversampling x1, modo normal */
  uint8_t ctrl_hum  = 0b00000001; // OSRS_H = x1
  uint8_t ctrl_meas = 0b00100111; // T x1, P x1, modo normal
  uint8_t config    = 0b10100000; // t_standby = 1000 ms, filter off

  BME280_WriteReg(BME280_REG_CTRL_HUM,  ctrl_hum);
  BME280_WriteReg(BME280_REG_CTRL_MEAS, ctrl_meas);
  BME280_WriteReg(BME280_REG_CONFIG,    config);
}

/* EXTI callback: puerta + PIR → dan semáforos a la tarea */
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
  if (GPIO_Pin == DOOR_Pin) {
    osSemaphoreRelease(doorSem);
  }
  else if (GPIO_Pin == PIR_Pin) {
    osSemaphoreRelease(pirSem);
  }
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */
  /* USER CODE END 1 */
/* USER CODE BEGIN Boot_Mode_Sequence_0 */
/* USER CODE END Boot_Mode_Sequence_0 */

  /* MPU Configuration--------------------------------------------------------*/
  MPU_Config();

/* USER CODE BEGIN Boot_Mode_Sequence_1 */
/* USER CODE END Boot_Mode_Sequence_1 */
  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */
  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();
/* USER CODE BEGIN Boot_Mode_Sequence_2 */
/* USER CODE END Boot_Mode_Sequence_2 */

  /* USER CODE BEGIN SysInit */
  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_DMA_Init();
  MX_I2C1_Init();
  MX_USART3_UART_Init();
  MX_UART4_Init();
  MX_TIM1_Init();
  MX_ADC1_Init();
  MX_TIM4_Init();
  MX_I2C2_Init();
  /* USER CODE BEGIN 2 */

  UART_Print("\r\n--- LuxSense CM7 START ---\r\n");

  /* Iniciar PWM ventilador (TIM1_CH2) */
  HAL_TIM_PWM_Start(&htim1, TIM_CHANNEL_2);
  Fan_SetDuty(0);

  /* Inicializar BME280 en I2C1 */
  BME280_Init();
  if (!devBME280.deviceReady) {
    UART_Print("BME280 NO listo, revisa conexiones/direccion I2C\r\n");
  }

  /* Inicializar OLED SSD1306 en I2C2 */
  ssd1306_Init();
  ssd1306_Fill(Black);
  ssd1306_SetCursor(0, 0);
  ssd1306_WriteString("LuxSense CM7", Font_7x10, White);
  ssd1306_SetCursor(0, 12);
  ssd1306_WriteString("Booting...", Font_7x10, White);
  ssd1306_UpdateScreen();

  /* Estado inicial del cuarto */
  memset(&gRoom, 0, sizeof(gRoom));
  gRoom.mode = ROOM_MODE_STANDBY;

  /* USER CODE END 2 */

  /* Init scheduler */
  osKernelInitialize();

  /* USER CODE BEGIN RTOS_MUTEX */
  const osMutexAttr_t roomStateMutex_attr = {
    .name = "roomStateMutex"
  };
  roomStateMutex = osMutexNew(&roomStateMutex_attr);
  if (roomStateMutex == NULL) {
    Error_Handler();
  }
  /* USER CODE END RTOS_MUTEX */

  /* USER CODE BEGIN RTOS_SEMAPHORES */
  const osSemaphoreAttr_t doorSem_attr = {
    .name = "doorSem"
  };
  doorSem = osSemaphoreNew(1, 0, &doorSem_attr);   // empieza en 0

  const osSemaphoreAttr_t pirSem_attr = {
    .name = "pirSem"
  };
  pirSem = osSemaphoreNew(1, 0, &pirSem_attr);     // empieza en 0

  if (doorSem == NULL || pirSem == NULL) {
    Error_Handler();
  }
  /* USER CODE END RTOS_SEMAPHORES */

  /* USER CODE BEGIN RTOS_TIMERS */
  /* USER CODE END RTOS_TIMERS */

  /* USER CODE BEGIN RTOS_QUEUES */
  /* USER CODE END RTOS_QUEUES */

  /* Create the thread(s) */
  /* creation of defaultTask (control puerta/PIR + modos) */
  defaultTaskHandle = osThreadNew(StartDefaultTask, NULL, &defaultTask_attributes);

  /* creation of envTask (BME + FAN + OLED + UART) */
  envTaskHandle = osThreadNew(StartEnvTask, NULL, &envTask_attributes);

  /* USER CODE BEGIN RTOS_THREADS */
  /* USER CODE END RTOS_THREADS */

  /* USER CODE BEGIN RTOS_EVENTS */
  /* USER CODE END RTOS_EVENTS */

  /* Start scheduler */
  osKernelStart();

  /* We should never get here as control is now taken by the scheduler */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};
  RCC_CRSInitTypeDef RCC_CRSInitStruct = {0};

  /** Supply configuration update enable
  */
  HAL_PWREx_ConfigSupply(PWR_DIRECT_SMPS_SUPPLY);

  /** Configure the main internal regulator output voltage
  */
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  while(!__HAL_PWR_GET_FLAG(PWR_FLAG_VOSRDY)) {}

  /** Configure LSE Drive Capability
  */
  HAL_PWR_EnableBkUpAccess();
  __HAL_RCC_LSEDRIVE_CONFIG(RCC_LSEDRIVE_LOW);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI48|RCC_OSCILLATORTYPE_HSI
                              |RCC_OSCILLATORTYPE_LSE;
  RCC_OscInitStruct.LSEState = RCC_LSE_ON;
  RCC_OscInitStruct.HSIState = RCC_HSI_DIV1;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.HSI48State = RCC_HSI48_ON;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 4;
  RCC_OscInitStruct.PLL.PLLN = 12;
  RCC_OscInitStruct.PLL.PLLP = 2;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  RCC_OscInitStruct.PLL.PLLRGE = RCC_PLL1VCIRANGE_3;
  RCC_OscInitStruct.PLL.PLLVCOSEL = RCC_PLL1VCOWIDE;
  RCC_OscInitStruct.PLL.PLLFRACN = 4096;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2
                              |RCC_CLOCKTYPE_D3PCLK1|RCC_CLOCKTYPE_D1PCLK1;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.SYSCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB3CLKDivider = RCC_APB3_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_APB1_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_APB2_DIV1;
  RCC_ClkInitStruct.APB4CLKDivider = RCC_APB4_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }

  /** Enable the SYSCFG APB clock
  */
  __HAL_RCC_CRS_CLK_ENABLE();

  /** Configures CRS
  */
  RCC_CRSInitStruct.Prescaler = RCC_CRS_SYNC_DIV1;
  RCC_CRSInitStruct.Source = RCC_CRS_SYNC_SOURCE_LSE;
  RCC_CRSInitStruct.Polarity = RCC_CRS_SYNC_POLARITY_RISING;
  RCC_CRSInitStruct.ReloadValue = __HAL_RCC_CRS_RELOADVALUE_CALCULATE(48000000,32768);
  RCC_CRSInitStruct.ErrorLimitValue = 34;
  RCC_CRSInitStruct.HSI48CalibrationValue = 32;

  HAL_RCCEx_CRSConfig(&RCC_CRSInitStruct);
}

