/**
  * Enable DMA controller clock
  */
static void MX_DMA_Init(void)
{

  /* DMA controller clock enable */
  __HAL_RCC_DMA1_CLK_ENABLE();

  /* DMA interrupt init */
  /* DMA1_Stream1_IRQn interrupt configuration */
  HAL_NVIC_SetPriority(DMA1_Stream1_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(DMA1_Stream1_IRQn);
  /* DMA1_Stream2_IRQn interrupt configuration */
  HAL_NVIC_SetPriority(DMA1_Stream2_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(DMA1_Stream2_IRQn);

}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */
  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();
  __HAL_RCC_GPIOE_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, LED_VERDE_Pin|LED_ROJO_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(LED_AMARILLO_GPIO_Port, LED_AMARILLO_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : BTN_Pin (no usado en lógica actual) */
  GPIO_InitStruct.Pin = BTN_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_RISING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(BTN_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : DOOR_Pin */
  GPIO_InitStruct.Pin = DOOR_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_PULLUP;   // MC-38 a GND = CERRADA
  HAL_GPIO_Init(DOOR_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LED_VERDE_Pin */
  GPIO_InitStruct.Pin = LED_VERDE_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_VERY_HIGH;
  HAL_GPIO_Init(LED_VERDE_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LED_ROJO_Pin */
  GPIO_InitStruct.Pin = LED_ROJO_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(LED_ROJO_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : PIR_Pin (no usado ahora) */
  GPIO_InitStruct.Pin = PIR_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(PIR_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LED_AMARILLO_Pin */
  GPIO_InitStruct.Pin = LED_AMARILLO_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(LED_AMARILLO_GPIO_Port, &GPIO_InitStruct);

  /* USER CODE BEGIN MX_GPIO_Init_2 */
  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
/* USER CODE END 4 */

/* USER CODE BEGIN Header_StartDefaultTask */
/* USER CODE END Header_StartDefaultTask */
void StartDefaultTask(void *argument)
{
  /* USER CODE BEGIN 5 */

  UART_Print("Tarea principal iniciada\r\n");

  GPIO_PinState doorState     = HAL_GPIO_ReadPin(DOOR_GPIO_Port, DOOR_Pin);
  GPIO_PinState lastDoorState = doorState;

  uint32_t elapsedTempMs = 0;

  /* Estado inicial según la puerta */
  if (doorState == GPIO_PIN_RESET)
  {
    // Con pull-up interno: RESET = puerta cerrada (MC-38 conduce a GND)
    UART_Print("Estado inicial: Puerta CERRADA -> monitoreo ACTIVADO\r\n");
    systemActive = true;
    HAL_GPIO_WritePin(LED_VERDE_GPIO_Port, LED_VERDE_Pin, GPIO_PIN_SET);   // LED verde = monitoreando
  }
  else
  {
    UART_Print("Estado inicial: Puerta ABIERTA -> monitoreo DETENIDO\r\n");
    systemActive = false;
    HAL_GPIO_WritePin(LED_VERDE_GPIO_Port, LED_VERDE_Pin, GPIO_PIN_RESET);
    Fan_SetDuty(0);
    fan_pwm = 0;
  }

  for(;;)
  {
    /* Leer estado actual de la puerta */
    doorState = HAL_GPIO_ReadPin(DOOR_GPIO_Port, DOOR_Pin);

    /* Detectar cambio de estado en la puerta */
    if (doorState != lastDoorState)
    {
      lastDoorState = doorState;

      if (doorState == GPIO_PIN_RESET)
      {
        /* Puerta CERRADA: activar monitoreo */
        UART_Print("Puerta CERRADA -> monitoreo ACTIVADO\r\n");
        systemActive = true;
        HAL_GPIO_WritePin(LED_VERDE_GPIO_Port, LED_VERDE_Pin, GPIO_PIN_SET);
      }
      else
      {
        /* Puerta ABIERTA: detener monitoreo */
        UART_Print("Puerta ABIERTA -> monitoreo DETENIDO\r\n");
        systemActive = false;

        HAL_GPIO_WritePin(LED_VERDE_GPIO_Port,    LED_VERDE_Pin,    GPIO_PIN_RESET);
        HAL_GPIO_WritePin(LED_AMARILLO_GPIO_Port, LED_AMARILLO_Pin, GPIO_PIN_RESET);
        HAL_GPIO_WritePin(LED_ROJO_GPIO_Port,     LED_ROJO_Pin,     GPIO_PIN_RESET);

        // Apagar ventilador
        fan_pwm = 0;
        Fan_SetDuty(0);
      }
    }

    /* Solo medir temperatura cuando la puerta está CERRADA (systemActive = true) */
    if (systemActive && devBME280.deviceReady)
    {
      elapsedTempMs += LOOP_PERIOD_MS;

      if (elapsedTempMs >= TEMP_SAMPLE_MS)
      {
        elapsedTempMs = 0;

        if (BME280_ReadSensorOnce())
        {
          /* Parpadeo corto amarillo cuando se lee el sensor */
          HAL_GPIO_WritePin(LED_AMARILLO_GPIO_Port, LED_AMARILLO_Pin, GPIO_PIN_SET);

          /* Lógica de PWM del ventilador según temperatura */
          if (dev.temperature <= TEMP_OFF_THRESHOLD)
          {
            fan_pwm = 0;
          }
          else if (dev.temperature < TEMP_MID_THRESHOLD)
          {
            fan_pwm = 50;
          }
          else if (dev.temperature < TEMP_HIGH_THRESHOLD)
          {
            fan_pwm = 75;
          }
          else
          {
            fan_pwm = 100;
          }

          Fan_SetDuty(fan_pwm);

          /* LED rojo encendido si el ventilador está en cualquier nivel > 0% */
          if (fan_pwm == 0)
          {
            HAL_GPIO_WritePin(LED_ROJO_GPIO_Port, LED_ROJO_Pin, GPIO_PIN_RESET);
          }
          else
          {
            HAL_GPIO_WritePin(LED_ROJO_GPIO_Port, LED_ROJO_Pin, GPIO_PIN_SET);
          }

          /* Imprimir estado de puerta + temperatura (y otros) a PC */
          int len = snprintf(uartBuf, sizeof(uartBuf),
                             "Puerta=CERRADA | T=%.2f C, RH=%.2f %%, P=%.2f hPa | Fan=%u%%\r\n",
                             dev.temperature,
                             dev.humidity,
                             dev.pressure,
                             fan_pwm);
          if (len > 0)
          {
            HAL_UART_Transmit(&huart3, (uint8_t*)uartBuf, (uint16_t)len, HAL_MAX_DELAY);
          }

          /* Enviar versión compacta a la ESP por UART4 */
          // Formato ejemplo: D=0/1 (0 cerrada, 1 abierta),T,RH,P,F
          int lenEsp = snprintf(espBuf, sizeof(espBuf),
                                "D=%d,T=%.2f,H=%.2f,P=%.2f,F=%u\r\n",
                                0,  // 0 = cerrada, aquí siempre está cerrada
                                dev.temperature,
                                dev.humidity,
                                dev.pressure,
                                fan_pwm);
          if (lenEsp > 0)
          {
            HAL_UART_Transmit(&huart4, (uint8_t*)espBuf, (uint16_t)lenEsp, HAL_MAX_DELAY);
          }

          /* Apagar parpadeo amarillo */
          HAL_GPIO_WritePin(LED_AMARILLO_GPIO_Port, LED_AMARILLO_Pin, GPIO_PIN_RESET);
        }
      }
    }
    else
    {
      // Si no está activo el sistema (puerta abierta o BME no listo), aseguramos PWM en 0
      fan_pwm = 0;
      Fan_SetDuty(0);
      HAL_GPIO_WritePin(LED_ROJO_GPIO_Port, LED_ROJO_Pin, GPIO_PIN_RESET);
    }

    /* Periodo base de la tarea */
    osDelay(LOOP_PERIOD_MS);
  }

  /* USER CODE END 5 */
}

/* MPU Configuration */

void MPU_Config(void)
{
  MPU_Region_InitTypeDef MPU_InitStruct = {0};

  /* Disables the MPU */
  HAL_MPU_Disable();

  /** Initializes and configures the Region and the memory to be protected
  */
  MPU_InitStruct.Enable = MPU_REGION_ENABLE;
  MPU_InitStruct.Number = MPU_REGION_NUMBER0;
  MPU_InitStruct.BaseAddress = 0x0;
  MPU_InitStruct.Size = MPU_REGION_SIZE_4GB;
  MPU_InitStruct.SubRegionDisable = 0x87;
  MPU_InitStruct.TypeExtField = MPU_TEX_LEVEL0;
  MPU_InitStruct.AccessPermission = MPU_REGION_NO_ACCESS;
  MPU_InitStruct.DisableExec = MPU_INSTRUCTION_ACCESS_DISABLE;
  MPU_InitStruct.IsShareable = MPU_ACCESS_SHAREABLE;
  MPU_InitStruct.IsCacheable = MPU_ACCESS_NOT_CACHEABLE;
  MPU_InitStruct.IsBufferable = MPU_ACCESS_NOT_BUFFERABLE;

  HAL_MPU_ConfigRegion(&MPU_InitStruct);
  /* Enables the MPU */
  HAL_MPU_Enable(MPU_PRIVILEGED_DEFAULT);

}

/**
  * @brief  Period elapsed callback in non blocking mode
  * @note   This function is called  when TIM6 interrupt took place, inside
  * HAL_TIM_IRQHandler(). It makes a direct call to HAL_IncTick() to increment
  * a global variable "uwTick" used as application time base.
  * @param  htim : TIM handle
  * @retval None
  */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  /* USER CODE BEGIN Callback 0 */
  /* USER CODE END Callback 0 */
  if (htim->Instance == TIM6)
  {
    HAL_IncTick();
  }
  /* USER CODE BEGIN Callback 1 */
  /* USER CODE END Callback 1 */
}

