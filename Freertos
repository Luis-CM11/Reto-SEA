/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

typedef struct {
  volatile float temperature;  // °C
  volatile float pressure;     // hPa
  volatile float humidity;     // %RH
} Device_Config;

typedef struct {
  uint16_t dig_T1;
  int16_t  dig_T2;
  int16_t  dig_T3;
  uint16_t dig_P1;
  int16_t  dig_P2;
  int16_t  dig_P3;
  int16_t  dig_P4;
  int16_t  dig_P5;
  int16_t  dig_P6;
  int16_t  dig_P7;
  int16_t  dig_P8;
  int16_t  dig_P9;
  uint8_t  dig_H1;
  int16_t  dig_H2;
  uint8_t  dig_H3;
  int16_t  dig_H4;
  int16_t  dig_H5;
  int8_t   dig_H6;
} Calibration_Data;

typedef struct {
  uint8_t         ID;
  bool            deviceReady;
  bool            dataReady;
  uint8_t         rawData[8];
  uint32_t        rawTemperature;
  uint32_t        rawPressure;
  uint16_t        rawHumidity;
  Calibration_Data coef;
} BME_Config;

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

/* --- BME280 I2C & registros --- */
#define BME280_I2C_ADDRESS            (0x76 << 1)   // Ajusta a 0x77<<1 si tu módulo es 0x77

#define BME280_REG_CHIP_ID            0xD0
#define BME280_REG_CTRL_HUM           0xF2
#define BME280_REG_STATUS             0xF3
#define BME280_REG_CTRL_MEAS          0xF4
#define BME280_REG_CONFIG             0xF5
#define BME280_REG_DATA               0xF7

#define BME280_REG_T1                 0x88
#define BME280_REG_T2                 0x8A
#define BME280_REG_T3                 0x8C
#define BME280_REG_P1                 0x8E
#define BME280_REG_P2                 0x90
#define BME280_REG_P3                 0x92
#define BME280_REG_P4                 0x94
#define BME280_REG_P5                 0x96
#define BME280_REG_P6                 0x98
#define BME280_REG_P7                 0x9A
#define BME280_REG_P8                 0x9C
#define BME280_REG_P9                 0x9E

#define BME280_REG_H1                 0xA1
#define BME280_REG_H2                 0xE1
#define BME280_REG_H3                 0xE3
#define BME280_REG_H4                 0xE4
#define BME280_REG_H5                 0xE5
#define BME280_REG_H6                 0xE7

/* Umbrales de temperatura para “ventilador” */
#define TEMP_OFF_THRESHOLD   24.0f   // por debajo de esto -> 0%
#define TEMP_MID_THRESHOLD   25.0f   // entre OFF y MID -> 50%
#define TEMP_HIGH_THRESHOLD  27.0f   // por encima -> 100%

/* Tiempos en ms (lógica con osDelay y contadores) */
#define LOOP_PERIOD_MS      200U    // Cada cuánto iteramos la tarea
#define TEMP_SAMPLE_MS      2000U   // Cada cuánto leemos BME cuando el sistema está activo

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */
/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/

I2C_HandleTypeDef hi2c1;
DMA_HandleTypeDef hdma_i2c1_rx;
DMA_HandleTypeDef hdma_i2c1_tx;

TIM_HandleTypeDef htim1;

UART_HandleTypeDef huart4;   // hacia ESP
UART_HandleTypeDef huart3;   // hacia PC

/* Definitions for defaultTask */
osThreadId_t defaultTaskHandle;
const osThreadAttr_t defaultTask_attributes = {
  .name = "defaultTask",
  .stack_size = 128 * 4,
  .priority = (osPriority_t) osPriorityNormal,
};
/* USER CODE BEGIN PV */

Device_Config dev;
BME_Config    devBME280;

/* Estado lógico del sistema */
static bool systemActive = false;   // “Cuarto despierto” = puerta cerrada
static uint8_t fan_pwm   = 0;      // 0–100 %

/* Buffers UART */
static char uartBuf[128];   // PC
static char espBuf[128];    // ESP

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MPU_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_I2C1_Init(void);
static void MX_USART3_UART_Init(void);
static void MX_UART4_Init(void);
static void MX_TIM1_Init(void);
void StartDefaultTask(void *argument);

/* USER CODE BEGIN PFP */

/* BME280 helpers */
static void BME280_Init(void);
static void BME280_ReadCalibration(void);
static void BME280_WriteReg(uint8_t reg, uint8_t value);
static bool BME280_ReadSensorOnce(void);
static void BME280_ProcessRaw(int32_t rawTemp, uint32_t rawPressure, uint16_t rawHumidity);

/* UART helper */
static void UART_Print(const char *msg);

/* PWM ventilador */
void Fan_SetDuty(uint8_t duty_percent);

